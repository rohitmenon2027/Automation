pipeline {
    agent any

    environment {
        // Set up Python virtual environment directory
        VIRTUAL_ENV = '.venv'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from Git repository
                git 'https://github.com/your-repository/your-project.git'
            }
        }

        stage('Setup Python Environment') {
            steps {
                script {
                    // Install dependencies and create a virtual environment
                    sh 'python3 -m venv ${VIRTUAL_ENV}'
                    sh '${VIRTUAL_ENV}/bin/pip install --upgrade pip'
                    sh '${VIRTUAL_ENV}/bin/pip install -r requirements.txt'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run pytest tests and generate a JUnit-compatible report
                    sh '${VIRTUAL_ENV}/bin/pytest --maxfail=5 --disable-warnings --junitxml=report.xml'
                }
            }
        }

        stage('Archive Test Results') {
            steps {
                // Archive the test results generated by pytest in JUnit format
                junit 'report.xml'
            }
        }

        stage('Clean Up') {
            steps {
                script {
                    // Clean up by removing the virtual environment (optional)
                    sh 'rm -rf ${VIRTUAL_ENV}'
                }
            }
        }
    }

    post {
        always {
            // Ensure to delete the virtual environment on completion
            cleanWs()
        }

        success {
            echo 'Tests ran successfully!'
        }

        failure {
            echo 'Tests failed, check the report for details.'
        }
    }
}
